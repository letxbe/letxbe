[flake8]
count = True
exclude = .git, data, venv
extend-ignore =
    # whitespace before ':'
	E203,
    # "line too long" already handled by black
	E501,
    # too much "#" in a comment
	E266,
    # undefined name "X", used for type hinting in python2
	F821,
max-complexity = 15
max-line-length = 88
